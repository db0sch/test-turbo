<h1>Movies</h1>
<%= turbo_stream_from :movies %>
<%= form_with(model: @movie, url: movies_path, method: :post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <% if @movie.errors.any? %>
    <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.submit %>
<% end %>

<ul>
  <% @movies.each do |movie| %>
    <li><%= movie.title %></li>
  <% end %>
</ul>
